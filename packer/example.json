{
    "variables": {
        "ssh_host": "",
        "ssh_user": "",
        "ssh_key": ""
    },
    "builders":[
        {
            "type": "null",
            "communicator": "ssh",
            "ssh_pty": true,
            "ssh_timeout" : "1m",
            "ssh_host": "{{user `ssh_host`}}",
            "ssh_username": "{{user `ssh_user`}}",
            "ssh_private_key_file": "{{user `ssh_key`}}"
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file" : "ansible/playbook.yml",
            "user": "ec2-user",
            "ssh_host_key_file": "{{user `ssh_key`}}",
            "ansible_env_vars": [ 
                "ANSIBLE_HOST_KEY_CHECKING=False",
                "ANSIBLE_NOCOLOR=True" 
            ],
            "extra_arguments": [
                "-vvv"
            ]
        }
    ]
}